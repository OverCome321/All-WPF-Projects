        <Button Content="Проверить" HorizontalAlignment="Left" Margin="328,309,0,0" VerticalAlignment="Top" Width="145" Height="51" Background="White" FontWeight="Bold" FontSize="24" BorderBrush="Black" Click="Button_Click"/>
        <Label Content="В Данном приложении вы можете проверить соответствие введенной строки " HorizontalAlignment="Left" Margin="52,160,0,0" VerticalAlignment="Top" Width="707" FontSize="18" FontWeight="Bold"/>
        <Image Margin="280,27,282,279" Source="depositphotos_10118085-stock-photo-happy-smiley-removebg-preview.png" Stretch="Fill"/>
        <Label x:Name="Result" Content="" HorizontalAlignment="Left" Margin="183,365,0,0" VerticalAlignment="Top" Width="485" FontSize="20" FontWeight="Bold"/>

    </Grid>
</Window>
